rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: 
    // - Anyone authenticated can READ user profiles (needed for Leaderboard/View Profile)
    // - Users can only WRITE their own data
    match /users/{userId} {
      allow read, write: if true;
    }

    // Leaderboard: Authenticated users can read/write
    match /weeklyLeaderboard/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Counters: Authenticated users can read/write
    match /counters/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
