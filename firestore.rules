rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any logged-in user to read and write user profiles
    // This is required for the Referral System to work
    // Recursive match allows access to subcollections (friends, friendRequests)
    match /users/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /weeklyLeaderboard/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Bot system collections
    match /botUsers/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /config/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /counters/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Event system (Sunday Lottery, etc.)
    match /events/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Mailbox system - users can read/write their own messages
    // Mailbox system
    match /mailbox/{messageId} {
      // User can only read, update (mark read/claim), or delete THEIR OWN messages
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow ANY authenticated user to CREATE a message for anyone
      // This is required so User B can send a "Referral Reward" to User A
      allow create: if request.auth != null;
    }

    // Allow participants to join the lottery (Sunday Lottery)
    match /sunday_lottery_participants/{document=**} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
